{
  "companySlug": "flutch",
  "name": "support",
  "title": "Multi-Agent Support System",
  "description": "CoRAG-powered multi-agent support system with intelligent routing and streaming responses",
  "detailedDescription": "Advanced multi-agent support system featuring intelligent query routing between specialized agents: Authoritative Agent for direct KB answers, Research Agent for deep analysis with iterative CoRAG, and Escalation Agent for human handoff. Features adaptive context retrieval, streaming responses, and self-reflection validation.",

  "category": "support",
  "author": "Flutch Team",
  "maintainer": "Flutch Support Team",
  "repository": "amelie-monorepo/packages/graphs/support",
  "tags": [
    "multi-agent",
    "corag",
    "support",
    "streaming",
    "retrieval",
    "knowledge-base"
  ],
  "visibility": "public",

  "ui": {
    "enabled": true,
    "title": "ðŸŽ§ Support Center",
    "description": "Multi-agent support system with intelligent routing",
    "defaultScreen": "dashboard",
    "menu": ["dashboard", "agents", "knowledge-base", "analytics"],
    "screens": {
      "dashboard": {
        "title": "Support Dashboard",
        "type": "dashboard",
        "widgets": [
          {
            "type": "metrics",
            "title": "Query Statistics",
            "data_path": "metrics.queries"
          },
          {
            "type": "chart",
            "title": "Agent Usage",
            "data_path": "metrics.agents"
          }
        ]
      },
      "agents": {
        "title": "Support Agents",
        "type": "grid",
        "endpoint": "agents.list",
        "items": [
          {
            "id": "router",
            "title": "Query Router",
            "description": "Routes queries to appropriate agents",
            "status": "active"
          },
          {
            "id": "authoritative",
            "title": "Authoritative Agent",
            "description": "Direct KB answers with CoRAG",
            "status": "active"
          },
          {
            "id": "research",
            "title": "Research Agent",
            "description": "Deep analysis with iterative CoRAG",
            "status": "active"
          }
        ]
      },
      "knowledge-base": {
        "title": "Knowledge Base",
        "type": "table",
        "endpoint": "kb.list",
        "columns": [
          { "id": "title", "title": "Document", "format": "text" },
          { "id": "category", "title": "Category", "format": "text" },
          { "id": "lastUpdated", "title": "Last Updated", "format": "date" }
        ]
      }
    },
    "theme": {
      "primaryColor": "#6366f1",
      "accentColor": "#8b5cf6"
    },
    "permissions": {
      "read": ["USER", "ADMIN", "SUPPORT"],
      "write": ["ADMIN", "SUPPORT"]
    }
  },

  "versioning": {
    "strategy": "semver",
    "defaultVersion": "1.0.0",
    "supportedVersions": ["1.0.0"]
  },

  "versions": {
    "1.0.0": {
      "status": "stable",
      "releaseDate": "2025-01-15T00:00:00.000Z",
      "isActive": true,
      "visibility": "public",
      "configSchemaPath": "./src/graph/versions/v1.0.0/config-schema.json"
    }
  }
}
